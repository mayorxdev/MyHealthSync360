# Production Environment Variables for MyHealthSync360
# Copy this file to .env.local or set these variables in Coolify

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
PORT=3000

# Supabase Configuration (Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-production-supabase-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key_here

# Stripe Configuration (Production)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_super_secret_nextauth_secret_here

# Security
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# Database (if using external database)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Email Configuration (if using email services)
EMAIL_FROM=noreply@your-domain.com
EMAIL_SERVER_HOST=smtp.your-email-provider.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_email_username
EMAIL_SERVER_PASSWORD=your_email_password

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Error Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id 